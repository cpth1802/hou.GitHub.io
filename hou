    // 2. éŠæˆ²ç‹€æ…‹è®Šæ•¸

    let currentQuiz = []; // ç•¶å‰ 5 é¡Œ

    let currentQIndex = 0; // ç•¶å‰é¡Œç›®ç´¢å¼• (0-4)

    let totalScore = 0; // ç´¯ç©ç¸½åˆ†

    let totalPoints = 0; // ç´¯ç©é»æ•¸

    let userAnswers = {}; // å„²å­˜ä½¿ç”¨è€…æœ¬è¼ªç­”æ¡ˆ {q_id: 'A'}

 

    // 3. DOM å…ƒç´ 

    const quizArea = document.getElementById('quiz-area');

    const scoreDisplay = document.getElementById('score');

    const pointsDisplay = document.getElementById('points');

    const rewardPointsDisplay = document.getElementById('reward-points');

    const prevBtn = document.getElementById('prev-btn');

    const nextBtn = document.getElementById('next-btn');

    const submitBtn = document.getElementById('submit-btn');

    const newRoundBtn = document.getElementById('new-round-btn');

    const redeemBtn = document.getElementById('redeem-btn');

    const achievementList = document.getElementById('achievement-list');

 

    // 4. æ ¸å¿ƒåŠŸèƒ½

 

    // å¾é¡Œåº«ä¸­éš¨æ©Ÿé¸å– 5 é¡Œ

    function generateNewQuiz() {

        const shuffled = allQuestions.sort(() => 0.5 - Math.random());

        currentQuiz = shuffled.slice(0, 5);

        currentQIndex = 0;

        userAnswers = {}; // é‡ç½®ç­”æ¡ˆ

    }

 

    // æ¸²æŸ“ç•¶å‰é¡Œç›®

    function renderQuestion(index) {

        if (currentQuiz.length === 0) return;

 

        const qData = currentQuiz[index];

        const optionsHtml = qData.options.map((opt, i) => {

            const letter = String.fromCharCode(65 + i); // 65 = 'A'

            const isChecked = userAnswers[qData.id] === letter ? ' checked' : '';

            return `<button

                        data-answer="${letter}"

                        data-qid="${qData.id}"

                        onclick="handleAnswerClick(this)"

                        ${isChecked ? 'class="selected"' : ''}>

                        (${letter}) ${opt}

                    </button>`;

        }).join('');

 

        const cardHtml = `

            <div class="question-card" data-qid="${qData.id}">

                <h2>ç¬¬ ${index + 1} é¡Œ (ç¸½å…± 5 é¡Œ)</h2>

                <p class="question-text">${qData.q}</p>

                ${qData.image ? `<img src="${qData.image}" alt="é¡Œç›®åœ–ç¤º" style="max-width: 100%; height: auto; margin-bottom: 15px;">` : ''}

                <div class="options">${optionsHtml}</div>

                <div class="explanation" id="exp-${qData.id}"><strong>ğŸ’¡ è§£é¡Œèªªæ˜:</strong> ${qData.exp}</div>

            </div>

        `;

        quizArea.innerHTML = cardHtml;

        updateNavButtons();

       

        // å¦‚æœå·²ç¶“ä½œç­”ï¼Œç¢ºä¿é¸é …ç‹€æ…‹æ­£ç¢º

        if (userAnswers[qData.id]) {

             const selectedBtn = document.querySelector(`.options button[data-answer="${userAnswers[qData.id]}"]`);

             if (selectedBtn) selectedBtn.classList.add('selected');

        }

    }

 

    // è™•ç†é¸é …é»æ“Š

    function handleAnswerClick(button) {

        const qid = button.dataset.qid;

        const answer = button.dataset.answer;

 

        // ç§»é™¤åŒä¸€å€‹å•é¡Œçš„å…¶ä»–é¸é …çš„ selected class

        document.querySelectorAll(`.options button[data-qid="${qid}"]`).forEach(btn => {

            btn.classList.remove('selected');

        });

 

        // è¨­ç½®ç•¶å‰é¸é …

        button.classList.add('selected');

        userAnswers[qid] = answer;

    }

 

    // æ›´æ–°å°èˆªæŒ‰éˆ•ç‹€æ…‹

    function updateNavButtons() {

        prevBtn.style.display = currentQIndex > 0 ? 'inline-block' : 'none';

        nextBtn.style.display = currentQIndex < 4 ? 'inline-block' : 'none';

        submitBtn.style.display = currentQIndex === 4 ? 'inline-block' : 'none';

        newRoundBtn.style.display = 'none'; // é è¨­éš±è—

    }

 

    // æª¢æŸ¥ä¸¦è¨ˆç®—åˆ†æ•¸

    function checkQuiz() {

        let correctCount = 0;

       

        currentQuiz.forEach(q => {

            const userAnswer = userAnswers[q.id];

            const isCorrect = userAnswer === q.ans;

           

            if (isCorrect) {

                correctCount++;

            }

 

            // é¡¯ç¤ºè§£é¡Œèªªæ˜å’Œé¡è‰²æ¨™è¨»

            const explanationElement = document.getElementById(`exp-${q.id}`);

            if (explanationElement) explanationElement.style.display = 'block';

 

            document.querySelectorAll(`.options button[data-qid="${q.id}"]`).forEach(btn => {

                btn.disabled = true; // é–å®šæ‰€æœ‰æŒ‰éˆ•

                const btnAnswer = btn.dataset.answer;

               

                if (btnAnswer === q.ans) {

                    btn.classList.add('correct');

                } else if (btnAnswer === userAnswer && !isCorrect) {

                    btn.classList.add('wrong');

                }

            });

        });

 

        const pointsGained = correctCount * 5; // æ¯é¡Œ 5 é»

       

        // æ›´æ–°åˆ†æ•¸å’Œé»æ•¸

        scoreDisplay.textContent = correctCount;

        totalPoints += pointsGained;

        pointsDisplay.textContent = totalPoints;

        rewardPointsDisplay.textContent = totalPoints;

 

        // é¡¯ç¤ºç¸½çµæŒ‰éˆ•ï¼Œéš±è—å…¶ä»–

        prevBtn.style.display = 'none';

        nextBtn.style.display = 'none';

        submitBtn.style.display = 'none';

        newRoundBtn.style.display = 'inline-block';

        

        alert(`æœ¬è¼ªæŒ‘æˆ°çµæŸï¼ä½ ç­”å°äº† ${correctCount} é¡Œï¼Œç²å¾— ${pointsGained} é»æ•¸ï¼ğŸ‰`);

       

        // æª¢æŸ¥ä¸¦å…Œæ›çå‹µ

        checkRedeemableRewards();

    }

 

    // å…Œæ›çå‹µ (è‡ªå‹•æˆ–æ‰‹å‹•)

    function checkRedeemableRewards() {

        const rewards = [

            { id: 'medal-1', cost: 10 },

            { id: 'medal-2', cost: 30 },

            { id: 'medal-3', cost: 50 },

            { id: 'medal-4', cost: 100 }

        ];

 

        rewards.forEach(reward => {

            const medalElement = document.getElementById(reward.id);

            if (totalPoints >= reward.cost && !medalElement.classList.contains('unlocked')) {

                medalElement.classList.add('unlocked');

                medalElement.title = `${medalElement.alt} (å·²è§£é–)`;

                console.log(`æ­å–œè§£é–ï¼š${medalElement.alt}`);

            }

        });

    }

 

    // 5. äº‹ä»¶ç›£è½

 

    // å°èˆªæŒ‰éˆ•äº‹ä»¶

    prevBtn.addEventListener('click', () => {

        if (currentQIndex > 0) {

            currentQIndex--;

            renderQuestion(currentQIndex);

        }

    });

 

    nextBtn.addEventListener('click', () => {

        if (currentQIndex < 4) {

            currentQIndex++;

            renderQuestion(currentQIndex);

        }

    });

 

    // æäº¤æŒ‰éˆ•äº‹ä»¶

    submitBtn.addEventListener('click', () => {

        // å…ˆç¢ºä¿æ‰€æœ‰é¡Œç›®éƒ½æœ‰ä½œç­” (å¯é¸ï¼Œé€™è£¡ç°¡åŒ–ç‚ºç›´æ¥æäº¤)

        checkQuiz();

    });

 

    // é–‹å§‹æ–°ä¸€è¼ªäº‹ä»¶

    newRoundBtn.addEventListener('click', () => {

        scoreDisplay.textContent = "0"; // æ­¸é›¶å–®è¼ªåˆ†æ•¸

        startQuiz();

    });

   

    // çå‹µå…Œæ›æŒ‰éˆ• (é€™è£¡è¨­ç½®ç‚ºè‡ªå‹•æª¢æŸ¥ï¼ŒæŒ‰éˆ•åªæ˜¯æç¤ºä½œç”¨)

    redeemBtn.addEventListener('click', () => {

        checkRedeemableRewards();

        alert('ç³»çµ±å·²è‡ªå‹•ç‚ºæ‚¨æª¢æŸ¥å¯å…Œæ›çš„çå‹µï¼');

    });

 

 

    // 6. å•Ÿå‹•æ¸¬é©—

    function startQuiz() {

        generateNewQuiz();

        renderQuestion(currentQIndex);

        // é‡ç½®åˆ†æ•¸é¡¯ç¤º

        scoreDisplay.textContent = '0 / 5';

        updateNavButtons();

    }

 

    // ç¶²é è¼‰å…¥å¾Œå•Ÿå‹•

    window.onload = startQuiz;

 

</script>

